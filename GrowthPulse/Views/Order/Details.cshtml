@model GrowthPulse.ViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order #@Model.OrderId</h1>
<p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
<hr />

<h4>Purchased Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.TotalItemPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="fw-bold">
            <td colspan="3" class="text-end">Grand Total:</td>
            <td>@Model.TotalPrice.ToString("C")</td>
        </tr>
    </tfoot>
</table>

<div class="mt-4">
    <a asp-action="History" class="btn btn-outline-secondary">Back to Order History</a>
</div>