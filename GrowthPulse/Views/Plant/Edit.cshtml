@model GrowthPulse.ViewModels.PlantEditViewModel

@{
    ViewData["Title"] = "Edit Plant";
}

<h1>Edit "@Model.Name"</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PlantingDate" class="control-label"></label>
                <input asp-for="PlantingDate" class="form-control" type="date" />
                <span asp-validation-for="PlantingDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<GrowthPulse.Models.PlantStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Current Image</label><br />
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <img src="@Model.PhotoUrl" alt="Current plant image" style="max-width: 200px; border-radius: 5px;" />
                }
                else
                {
                    <p class="text-muted">No image available.</p>
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="Photo" class="control-label">Change Image</label>
                <input asp-for="Photo" class="form-control" type="file" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}