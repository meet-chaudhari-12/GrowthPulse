@model IEnumerable<GrowthPulse.ViewModels.PlantDetailsViewModel>
@{
    ViewData["Title"] = "AllPlants";
}

<div class="text-center">
    <h1 class="display-4">Plant Gallery</h1>
    <p>Browse all plants being tracked in the GrowthPulse community.</p>
</div>

<hr />

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var plant in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@plant.PhotoUrl" class="card-img-top" alt="@plant.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@plant.Name</h5>
                        <p class="card-text"><strong>Species:</strong> @plant.Species</p>
                        <p class="card-text"><small class="text-muted">Planted on: @plant.PlantingDate.ToString("d MMMM yyyy")</small></p>
                        <a asp-controller="Plant" asp-action="Details" asp-route-id="@plant.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p class="text-center text-muted">There are no plants to display at the moment.</p>
        </div>
    }
</div>